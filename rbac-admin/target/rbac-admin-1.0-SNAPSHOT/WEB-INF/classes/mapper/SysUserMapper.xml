    select t1.perms
    from sys_menu t1
    INNER JOIN sys_role_menu t2
    INNER JOIN sys_user_role t3 on (t1.menu_id = t2.menu_id and t2.role_id = t3.role_id)
    where t3.user_id = #{userId}
  </select>

